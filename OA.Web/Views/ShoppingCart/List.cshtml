@model IList<ShoppingCartItemModel>

@{
    ViewData["Title"] = "Shopping Cart";
    decimal totalPrice = 0;
}

<div class="container mt-5">
    <h2>Shopping Cart</h2>
    @if (!Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <form asp-action="UpdateCart" asp-controller="ShoppingCart" method="post">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        totalPrice += (item.Price * item.Quantity);
                        <tr>
                            <td>
                                <img src="@item.ProductImage" alt="@item.ProductName" style="height: 50px; width:50px;" />
                            </td>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>
                                <input type="number" name="cartItems[@item.Id].Quantity" value="@item.Quantity" min="1" class="form-control" style="width: 80px;" />
                            </td>
                            <td>@(item.Price * item.Quantity)</td>
                            <td>
                                <form asp-action="RemoveFromCart" asp-controller="ShoppingCart" method="post" style="display:inline;">
                                    <input type="hidden" name="ItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                                <button type="submit" class="btn btn-primary btn-sm" formaction="@Url.Action("UpdateCart", "ShoppingCart")">Update</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <h4>Total Price: @totalPrice.ToString("C")</h4>
                <a class="btn btn-primary" asp-action="List" asp-controller="Product">Continue Shopping</a>
                <a class="btn btn-success" asp-action="Checkout" asp-controller="ShoppingCart">Checkout</a>
            </div>
        </form>
    }
</div>
