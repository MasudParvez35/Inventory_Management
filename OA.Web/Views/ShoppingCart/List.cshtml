@model IList<ShoppingCartItemModel>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2>Shopping Cart</h2>
    @if (!Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    @* <th>Image</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th> *@
                    <th>User Id</th>
                    <th>Product Id</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.ProductId</td>
                        <td>@item.Quantity</td>
                    </tr>
                    @* <tr>
                        <td>
                            <img src="@item.ImagePath" alt="@item.ProductName" style="height: 50px; width:50px;" />
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Price * item.Quantity).ToString("C")</td>
                        <td>
                            <form asp-action="RemoveFromCart" asp-controller="ShoppingCart" method="post" style="display:inline;">
                                <input type="hidden" name="ItemId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr> *@
                }
            </tbody>
        </table>
    }
    <a class="btn btn-primary" asp-action="List" asp-controller="Product">Continue Shopping</a>
</div>
