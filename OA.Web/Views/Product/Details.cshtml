@model ProductModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Name" style="height: 300px; width:300px; margin:auto;">
                <div class="card-body text-center Product-Details-Cart">
                    <h5 class="card-title">Name: @Model.Name</h5>
                    <h5 class="card-text">Price: @Model.SellingPrice</h5>
                    <h5 class="card-text">Category: @Model.CategoryName</h5>
                    <h5 class="card-text">Available: @Model.Quantity</h5>
                </div>
                <div style="margin:10px;">
                    <form asp-action="AddToCart" asp-controller="ShoppingCart" method="post">
                        <input type="hidden" name="ProductId" value="@Model.Id" />
                        <input type="hidden" name="Quantity" value="1" /> <!-- Default quantity is 1 -->
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                    <a class="btn btn-primary" asp-action="List" asp-controller="Product">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
