@model OrderModel

@{
    ViewData["Title"] = "Create Order";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @* Hidden input for UserId *@
    <input type="hidden" asp-for="UserId" />

    @* Hidden input for OrderStatusId set to a specific value (e.g., 10) *@
    <input type="hidden" name="OrderStatusId" value="10" />

    <div class="form-group">
        <label asp-for="PaymentTypeId"></label>
        <select asp-for="PaymentTypeId" class="form-control" asp-items="Model.AvailablePaymentType"></select>
        <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MobileNumber"></label>
        <input asp-for="MobileNumber" class="form-control" />
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Order</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
