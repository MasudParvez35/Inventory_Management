@model List<OrderModel>

@{
    ViewData["Title"] = "Order List";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Payment Type</th>
            <th>Order Status</th>
            <th>Mobile Number</th>
            <th>TransactionId</th>
            <th>Address</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.PaymentTypeStr</td>
                    <td>
                        <span class="font-monospace"
                              style="color: @(order.OrderStatusId == 10 ? "red" : (order.OrderStatusId == 20 ? "green" : "black"));">
                            @order.OrderStatusStr
                        </span>
                    </td>
                    <td>@order.MobileNumber</td>
                    <td>@order.TransactionId</td>
                    <td>@order.Address</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <form asp-action="Capture" asp-route-id="@order.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to capture this order?');">Capture</button>
                        </form>

                        <form asp-action="Delete" asp-route-id="@order.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">No orders found.</td>
            </tr>
        }
    </tbody>
</table>
