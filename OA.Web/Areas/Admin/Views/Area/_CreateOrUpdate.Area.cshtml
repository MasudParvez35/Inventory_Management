@model AreaModel

<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div id="city-cards">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info"></i> Area Information
                        </h3>
                    </div>
                    <div class="card-body">
                        @await Html.PartialAsync("_CreateOrUpdateArea.Info", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>