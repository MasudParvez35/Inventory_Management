@model AreaModel
@{
    ViewData["Title"] = "Area Edit";
}
<h2>Edit Area</h2>

<input asp-for="Id" type="hidden" />

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-controller="Area" asp-action="AreaEdit" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update" />
                    <a class="btn btn-primary" asp-action="AreaList" asp-controller="Area">Back to area list</a>
                </div>
                <partial name="_CreateOrUpdate.Area"></partial>
            </form>
        </div>
    </div>
</div>