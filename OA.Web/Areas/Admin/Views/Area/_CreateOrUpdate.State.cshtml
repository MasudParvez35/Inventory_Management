@model StateModel

<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div id="city-cards">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info"></i> State Information
                        </h3>
                    </div>
                    <div class="card-body">
                        @await Html.PartialAsync("_CreateOrUpdateState.Info", Model)
                    </div>
                </div>

                @if (Model.Id > 0)
                {
                    <!-- City Areas Card -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-globe"></i> Cities
                            </h3>
                        </div>
                        <div class="card-body">
                        @await Html.PartialAsync("_CreateOrUpdateState.City", Model)
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
