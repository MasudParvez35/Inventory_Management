<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OA_WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OA_WEB.styles.css" asp-append-version="true" />
    <link href="~/css/stylesheet.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Product" asp-action="List">OA_WEB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="List">Category List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="List">Product List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Order" asp-action="List">Order List</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Order" asp-action="Myorder">Myorder</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCart" asp-action="WishList">
                                Wishlist @await Component.InvokeAsync("WishlistItemCount")
                            </a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCart" asp-action="CartList">
                                Shopping cart @await Component.InvokeAsync("CartItemCount")
                            </a>
                            <span class="text-success font-weight-bold p-2">@User.Identity.Name.ToUpper()</span>
                            <a class="btn btn-sm btn-danger font-weight-bold ms-2" asp-action="LogOut" asp-controller="Account">SignOut</a>
                        }
                        else
                        {
                            <a class="mx-2 btn btn-sm btn-danger font-weight-bold" asp-action="SignUp" asp-controller="Account">SignUp</a>
                            <a class="btn btn-sm btn-danger font-weight-bold" asp-action="Login" asp-controller="Account">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; M@sud P@rvez - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
